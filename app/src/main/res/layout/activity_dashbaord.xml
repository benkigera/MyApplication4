<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashbaord"
    android:id="@+id/Dashboard">


    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:id="@+id/fragment_container"
        android:layout_below="@+id/top_app_bar"
        android:layout_marginTop="@dimen/cardview_default_elevation"
        android:paddingTop="@dimen/cardview_default_radius">

    </FrameLayout>


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_app_bar">

       <include
           android:id="@+id/main_toolbar"
           layout="@layout/toolbar_layout">

       </include>
    </com.google.android.material.appbar.AppBarLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:clickable="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        android:fadingEdgeLength="@dimen/cardview_default_radius"
        android:elevation="4dp">


    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>