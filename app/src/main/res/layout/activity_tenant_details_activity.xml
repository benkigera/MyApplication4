<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/outlinedTextField"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Tenant_details_activity"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/add_tenants_toolbar"
            android:background="@color/colorAccent"
            app:titleTextColor="@color/cardview_light_background"
            app:subtitleTextColor="@color/cardview_shadow_start_color"
            app:layout_scrollFlags="scroll|enterAlways">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="30dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingRight="30dp">
      <com.google.android.material.card.MaterialCardView
          android:layout_width="50dp"
          android:layout_height="match_parent">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="match_parent"
              app:srcCompat="@drawable/ic_person_black_24dp"
              android:layout_gravity="center"/>

      </com.google.android.material.card.MaterialCardView>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        app:boxBackgroundMode="outline"
        style="@style/Widget.App.TextInputLayout.OutlinedBox"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:boxStrokeColor="#FFFA71CD"
        android:layout_weight="1"
        android:paddingRight="10dp"
        app:endIconMode="clear_text">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />



    </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/second_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="Second Name"
          app:boxBackgroundMode="outline"
          style="@style/Widget.App.TextInputLayout.OutlinedBox"
          app:counterEnabled="true"
          app:counterMaxLength="10"
          app:boxStrokeColor="#FFFA71CD"
          android:layout_weight="1"
          app:endIconMode="clear_text">


          <com.google.android.material.textfield.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />



      </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_phone_black_24dp"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                app:boxBackgroundMode="outline"
                style="@style/Widget.App.TextInputLayout.OutlinedBox"
                app:helperText="You can enter name here"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="#FFFA71CD"
                app:endIconMode="clear_text">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/house_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="House Number"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:counterEnabled="true"
                app:counterMaxLength="5"
                app:boxStrokeColor="#FFFA71CD"
                android:layout_weight="1"
                android:paddingRight="5dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/floor_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Floor"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="#FFFA71CD"
                android:layout_weight="1"
                app:endIconMode="custom">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Number"
                app:boxBackgroundMode="outline"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:helperText="enter your id number above"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="#FFFA71CD"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_card_membership_black_24dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_email_grey_24dp"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:boxBackgroundMode="outline"
                style="@style/Widget.App.TextInputLayout.OutlinedBox"
                app:helperText="enter your email above"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:boxStrokeColor="#FFFA71CD"
                app:endIconMode="clear_text"
                app:endIconTintMode="screen">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_date_range_black_24dp"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contract_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                style="@style/Widget.App.TextInputLayout.OutlinedBox"
                app:helperText="contract date"
                app:counterEnabled="true"
                app:counterMaxLength="12"
                app:boxStrokeColor="#FFFA71CD"
                app:endIconTintMode="screen">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_date"
                    app:endIconMode="@drawable/ic_date_range_black_24dp"/>



            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dp"
                android:layout_height="match_parent">



            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/amount_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Amount Paid"
                app:boxBackgroundMode="outline"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="#FFFA71CD"
                android:layout_weight="1"
                android:paddingRight="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>



            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/For"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="For"
                app:boxBackgroundMode="outline"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:boxStrokeColor="#FFFA71CD"
                android:layout_weight="1"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_black_24dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>





        <Button
            android:id="@+id/outlinedButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Confirm payment"
            android:layout_gravity="center"
            app:icon="@drawable/ic_check_box_black_24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:iconTint="@color/colorAccent"
            app:strokeColor="@color/colorAccent"
            android:textColor="@color/colorAccent"
            app:rippleColor="@color/colorAccent"
            android:layout_marginHorizontal="60dp">


        </Button>






    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>